@media (max-width: 1700px)
	.bottom-links ul
		font-size: 1em

@media (max-width: 1420px)
	.bottom-links ul
		font-size: 1em
	.bottom-links ul
		height: 200px
		flex-direction: column
	.header__menu
		flex 1 1 auto
	div.card-item
		font-size: 1.3em
	div.gallery-pic
		overflow-x: auto

@media (max-width: 875px)
	.header__menu ul
		flex-direction: column
	.header__menu
		flex 0 1 auto
	body
		background-image: none
		// background: linear-gradient(black, rgba(34, 32, 32, 0.7));
		background-color: #0b0a0a
	.footer
		flex-direction: column
		height: auto
	.main-title
		font-size: 3em
	.description
		font-size: 24px
	.main-page
		height: auto
	

